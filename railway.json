{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "streamlit run app.py --server.port=$PORT --server.address=0.0.0.0 --logger.level=error",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 2
  },
  "env": {
    "PYTHONUNBUFFERED": "1",
    "PORT": "8080"
  }
}